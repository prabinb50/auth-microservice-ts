generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// enum for user roles
enum Role {
  USER
  ADMIN
}

// user table
model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  password      String
  role          Role            @default(USER)  // new field with default role
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  // relation to refresh tokens (one user can have many tokens)
  refreshTokens RefreshToken[]
}

// refresh token table
model RefreshToken {
  id         Int       @id @default(autoincrement())
  token      String    @unique         // stores the refresh token string
  userId     Int                       // foreign key to user table
  expiresAt  DateTime                  // stores when token expires
  createdAt  DateTime  @default(now()) // token creation time

  // relation with user
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}
